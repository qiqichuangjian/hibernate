<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.hibernate.entity" > <!-- mapping 是hibernate映射文件  -->
    <class name="Staff" table="staff"  >
        <id name="id" column="s_id" type="java.lang.Integer">
            <generator class="native" />
        </id>
        <property name="name" type="java.lang.String" column="s_name"  />

        <many-to-one name="department" column="d_id" class="Department" cascade="save-update" ></many-to-one>
    </class>
</hibernate-mapping>
