<?xml version="1.0"?>
        <!DOCTYPE hibernate-mapping PUBLIC
                "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!-- package="com.hibernate.entity" -->
<hibernate-mapping package="com.hibernate.entity" > <!-- mapping 是hibernate映射文件  -->
<!--  name=类名   table=表名   -->
<class name="Role" table="role"  >
    <!--id 主键  name 属性  column 列名   type 类名  -->
    <id name="r_id" column="r_id"  >
        <!--  主键生成策略  increment hibernate框架的生成策略
         identity  mysql 底层数据库生成表识符
         native 是mysql数据库  -->
        <generator class="native" />
    </id>
    <property name="r_name" type="java.lang.String" column="r_name"   />
    <!--table="user_role"  中间表-->
    <set name="userSet" table="user_role" >
        <key column="r_id"></key>
        <many-to-many column="u_id" class="User"></many-to-many>
    </set>
    <!--table="role_permissions"  中间表-->
    <!--cascade="all"级联-->
    <set name="permissionsSet" table="role_permissions" cascade="all">
        <key column="r_id"></key>
        <many-to-many column="p_id" class="Permissions"></many-to-many>
    </set>
</class>
</hibernate-mapping>
