<?xml version="1.0"?>
        <!DOCTYPE hibernate-mapping PUBLIC
                "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!-- package="com.hibernate.entity" -->
<hibernate-mapping package="com.hibernate.entity" > <!-- mapping 是hibernate映射文件  -->
<!--  name=类名   table=表名   -->
<class name="User" table="user"  >
    <!--id 主键  name 属性  column 列名   type 类名  -->
    <id name="u_id" column="u_id"  >
        <!--  主键生成策略  increment hibernate框架的生成策略
         identity  mysql 底层数据库生成表识符
         native 是mysql数据库  -->
        <generator class="native" />
    </id>

    <property name="u_name" type="java.lang.String" column="u_name"   />
    <!--table="user_role"  中间表-->
    <!--cascade="all"级联-->
    <set name="roleSet" table="user_role" cascade="all" >
        <key column="u_id"></key>
        <many-to-many column="r_id" class="Role"/>
    </set>
</class>
    <!-- 注意query标签的位置 -->
    <query name="queryUser">
        <![CDATA[from User u where u.u_name like :u_name]]>
    </query>
</hibernate-mapping>
