<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!-- package="com.hibernate.entity" -->
<hibernate-mapping package="com.hibernate.entity"> <!-- mapping 是hibernate映射文件  -->
    <!--  name=类名   table=表名   -->
    <class name="Classes" table="t_class">
        <!--id 主键  name 属性  column 列名   type 类名  -->
        <id name="id" column="c_id">
            <!--  主键生成策略  increment hibernate框架的生成策略
             identity  mysql 底层数据库生成表识符
             native 是mysql数据库  -->
            <generator class="native"/>
        </id>

        <property name="name" type="java.lang.String" column="c_name"/>
        <!--&lt;!&ndash;一对多     双向绑定&ndash;&gt;-->
        <!--&lt;!&ndash; cascade="save-update"  强制级联保存 &ndash;&gt;-->
        <!--<set name="studentSet" cascade="save-update" inverse="true">-->
        <!--<key column="c_id"></key>-->
        <!--<one-to-many class="Student"></one-to-many>-->
        <!--</set>-->
    </class>

</hibernate-mapping>
