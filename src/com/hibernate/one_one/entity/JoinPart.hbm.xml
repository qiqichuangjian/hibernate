<?xml version="1.0"?>
        <!DOCTYPE hibernate-mapping PUBLIC
                "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.hibernate.one_one.entity" > <!-- mapping 是hibernate映射文件  -->
<class name="JoinPart" table="joinPart"  >
    <id name="id" column="p_id"  >
        <generator class="native" />
    </id>
    <property name="pname" type="java.lang.String" column="p_name"   />
    <!--cascade="save-update" 联级操作-->
    <one-to-one name="employee" cascade="save-update"  class="Employee" />
</class>
</hibernate-mapping>
