<?xml version="1.0"?>
        <!DOCTYPE hibernate-mapping PUBLIC
                "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.hibernate.one_one.entity" >
<class name="Employee" table="employee"  >
    <id name="id" column="e_id"  >
        <generator class="native" />
    </id>
    <property name="name" type="java.lang.String" column="e_name"   />
     <!--多对一关联映射 建议在主表（employee）中使用many-to-one-->
    <many-to-one name="joinPart"  class="JoinPart" column="j_id" ></many-to-one>
</class>
</hibernate-mapping>
